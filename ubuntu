author "frdmn"
description "start and stop example for Ubuntu (upstart)"
version "1.0"

start on started networking
stop on runlevel [!2345]

env APPUSER="example"
env APPDIR="/usr/bin"
env APPBIN="python"
env APPARGS="-m SimpleHTTPServer 8000"

respawn

script
  exec su - $APPUSER -c "$APPDIR/$APPBIN $APPARGS"
end script
